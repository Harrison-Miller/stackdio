{
    "variables": {
        "version": "{{ env `STACKDIO_VERSION` }}",
        "source_ami": "ami-427a392a",
        "aws_access_key": "{{ env `AWS_ACCESS_KEY` }}",
        "aws_secret_key": "{{ env `AWS_SECRET_KEY` }}",
        "packages": "python python-dev python-virtualenv mysql-server mysql-client libssl-dev libncurses5-dev swig libmysqlclient-dev rabbitmq-server git nginx libldap2-dev libsasl2-dev"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "ami_name": "stackd.io-server v{{ user `version` }} {{ timestamp }}",
            "source_ami": "{{ user `source_ami` }}",
            "access_key": "{{ user `aws_access_key` }}",
            "secret_key": "{{ user `aws_secret_key` }}",
            "ssh_username": "ubuntu",
            "region": "us-east-1",
            "instance_type": "m3.large",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "delete_on_termination": true
                }
            ],
            "ami_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_type": "gp2",
                    "delete_on_termination": true
                },
                {
                    "device_name": "/dev/sdb",
                    "virtual_name": "ephemeral0"
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell-local",
            "command": "bower install"
        },
        {
            "type": "shell-local",
            "command": "python setup.py sdist"
        },
        {
            "type": "file",
            "source": "dist/stackdio-server-{{ user `version` }}.tar.gz",
            "destination": "/tmp/stackdio-server.tar.gz"
        },
        {
            "type": "shell",
            "inline": [
                "apt-get install -y {{ user `packages` }}"
            ],
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
        },
        {
            "type": "file",
            "source": "packer/init-script",
            "destination": "/etc/init.d/stackdio"
        },
        {
            "type": "file",
            "source": "packer/stackdio-command",
            "destination": "/usr/bin/stackdio"
        },
        {
            "type": "shell",
            "script": "packer/install.sh",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
        },
        {
            "type": "shell",
            "inline": [
                "rm -f /home/ubuntu/.ssh/authorized_keys"
            ]
        }
    ]
}